<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="com.smartpos.retail.controllers.MainController"
            nodeOrientation="RIGHT_TO_LEFT" prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <right>
        <VBox prefWidth="200.0" spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="نقاط البيع الذكية" textFill="WHITE">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
                <Separator opacity="0.3" />
                <Label fx:id="userInfoLabel" textFill="#ecf0f1" wrapText="true" prefWidth="180.0">
                    <font><Font size="11.0" /></font>
                </Label>
                <Separator opacity="0.3" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showDashboardView" text="لوحة التحكم" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showSalesView" text="مبيعات" />
                <Button fx:id="inventoryButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showInventoryView" text="المخزون" />
                <Region VBox.vgrow="ALWAYS" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogout" text="خروج" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            </children>
        </VBox>
    </right>
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <children>
                <Label text="مرحباً بك" textFill="#7f8c8d">
                    <font><Font size="24.0" /></font>
                </Label>
            </children>
        </StackPane>
    </center>
</BorderPane>