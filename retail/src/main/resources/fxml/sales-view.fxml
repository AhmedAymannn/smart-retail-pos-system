<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smartpos.retail.controllers.SalesController">
    
    <top>
        <VBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Label text="المبيعات" textFill="WHITE">
                <font><Font name="System Bold" size="28.0" /></font>
            </Label>
            <VBox spacing="10">
                <Label text="امسح الباركود" textFill="WHITE">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="barcodeField" prefWidth="400.0" prefHeight="50.0" 
                               promptText="امسح الباركود هنا..." 
                               style="-fx-font-size: 18px; -fx-background-color: white;">
                        <font><Font size="18.0" /></font>
                    </TextField>
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="dateLabel" textFill="WHITE">
                        <font><Font size="14.0" /></font>
                    </Label>
                </HBox>
                <Label fx:id="lastScannedLabel" textFill="#2ecc71" visible="false">
                    <font><Font size="14.0" /></font>
                </Label>
            </VBox>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">
            <!-- Left: Recent Scans / Quick Info -->
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa;">
                <Label text="آخر مسح" textFill="#2c3e50">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <VBox fx:id="recentScansArea" spacing="5" />
                <Region VBox.vgrow="ALWAYS" />
                <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-width: 1;">
                    <Label text="إجراءات سريعة" textFill="#34495e">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Button fx:id="clearCartButton" text="مسح السلة" onAction="#handleClearCart" 
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 200;" />
                </VBox>
            </VBox>
            
            <!-- Right: Shopping Cart Area -->
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
                <Label text="سلة التسوق" textFill="#2c3e50">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
                <TableView fx:id="cartTable" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="cartProductColumn" text="المنتج" prefWidth="250.0" />
                        <TableColumn fx:id="cartQuantityColumn" text="الكمية" prefWidth="100.0" />
                        <TableColumn fx:id="cartPriceColumn" text="السعر" prefWidth="120.0" />
                        <TableColumn fx:id="cartTotalColumn" text="الإجمالي" prefWidth="120.0" />
                        <TableColumn fx:id="cartRemoveColumn" text="إزالة" prefWidth="100.0" />
                    </columns>
                </TableView>
                
                <VBox spacing="5" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 1;">
                    <HBox spacing="10">
                        <Label text="المجموع الفرعي:" textFill="#34495e">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="subtotalLabel" text="0.00" textFill="#2c3e50">
                            <font><Font name="System Bold" size="16.0" /></font>
                        </Label>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="الضريبة (0%):" textFill="#34495e">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="taxLabel" text="0.00" textFill="#2c3e50">
                            <font><Font size="14.0" /></font>
                        </Label>
                    </HBox>
                    <Separator />
                    <HBox spacing="10">
                        <Label text="الإجمالي:" textFill="#34495e">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalLabel" text="0.00" textFill="#e74c3c">
                            <font><Font name="System Bold" size="24.0" /></font>
                        </Label>
                    </HBox>
                </VBox>
                
                <HBox spacing="10">
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="checkoutButton" text="الدفع" onAction="#handleCheckout" 
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-width: 250; -fx-pref-height: 50;">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Button>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label text="الحالة:" textFill="WHITE" />
            <Label fx:id="statusLabel" text="جاهز" textFill="#2ecc71" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="رجوع" onAction="#handleBack" />
        </HBox>
    </bottom>
</BorderPane>
